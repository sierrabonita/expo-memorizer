{
  "name": "expo-memorizer",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "scripts": {
    "start": "expo start",
    "android": "emulator -avd Pixel_9 & adb wait-for-device && expo start --android",
    "ios": "expo start --ios",
    "ios:dev": "expo run:ios --device",
    "ios:rel": "expo run:ios --configuration Release --device",
    "web": "expo start --web",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "fix": "biome check --write --unsafe .",
    "test": "jest"
  },
  "jest": {
    "preset": "jest-expo",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/jest.setup.ts"
    ],
    "moduleNameMapper": {
      "^expo-sqlite$": "<rootDir>/tests/expo-sqlite.ts"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(jest-)?react-native|@react-native|@react-native-community|@react-navigation|react-native-.*|expo(nent)?|@expo(nent)?|expo-modules-core|expo-router|@unimodules|unimodules|sentry-expo)/"
    ]
  },
  "dependencies": {
    "@expo/vector-icons": "^15.0.3",
    "@react-navigation/native": "^7.1.8",
    "expo": "54.0.20",
    "expo-constants": "~18.0.10",
    "expo-font": "~14.0.9",
    "expo-image-picker": "~17.0.8",
    "expo-linking": "~8.0.8",
    "expo-router": "~6.0.13",
    "expo-splash-screen": "~31.0.10",
    "expo-sqlite": "~16.0.8",
    "expo-status-bar": "~3.0.8",
    "expo-web-browser": "~15.0.8",
    "jotai": "^2.15.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-paper": "^5.14.5",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-web": "~0.21.0",
    "react-native-worklets": "0.5.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@testing-library/react-native": "^13.3.3",
    "@types/jest": "29.5.14",
    "@types/react": "~19.1.0",
    "cspell": "^9.2.1",
    "jest": "^29.7.0",
    "jest-expo": "^54.0.13",
    "react-test-renderer": "19.1.0",
    "typescript": "~5.9.2"
  },
  "private": true,
  "volta": {
    "node": "20.19.5"
  }
}
